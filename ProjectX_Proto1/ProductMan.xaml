<Window x:Class="ProjectX_Proto2.ProductMan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Product Manager " WindowStartupLocation="CenterScreen" WindowState="Normal" WindowStyle="SingleBorderWindow" ResizeMode="CanResizeWithGrip" Background="{DynamicResource WindowBackgroundBrush}">
    <Window.Resources>
        <BitmapImage x:Key="UserImage" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="Resources/user_32xLG.png"></BitmapImage>
        <BitmapImage x:Key="SettingsImage" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="Resources/gear_32xLG.png"></BitmapImage>
        <BitmapImage x:Key="defaultUser" CreateOptions="IgnoreImageCache" CacheOption="OnLoad" UriSource="Resources/default.jpg"></BitmapImage>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="1"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0" Height="40" Background="{DynamicResource WindowAccentBrush}" VerticalAlignment="Top" Width="Auto">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15"/>
                    <!--Left Spacer... Column 0-->
                    <ColumnDefinition Width="210"/>
                    <!--Product title... Column 1-->
                    <ColumnDefinition Width="1"/>
                    <!--Middle spacer, white line... Column 2-->
                    <ColumnDefinition Width="25"/>
                    <!--Other products... Column 3-->
                    <ColumnDefinition Width="60"/>
                    <!--Middle spacer, empty space... Column 4-->
                    <ColumnDefinition Width="90"/>
                    <!--New Items link... Column 5-->
                    <ColumnDefinition Width="800*"/>
                    <!--Middle spacer.... Column 6-->
                    <ColumnDefinition Width="30"/>
                    <!--Settings... Column 7-->
                    <ColumnDefinition Width="130"/>
                    <!--Sign in space... Column 8-->
                    <ColumnDefinition Width="15"/>
                    <!--Sign in space... Column 9-->
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Name="pnlTitle" Style="{DynamicResource HeaderControls}">
                    <Label Style="{DynamicResource Header1}" Content="" FontFamily="Segoe UI Symbol"></Label>
                    <Label Style="{DynamicResource Header1}" Content="Purchase Manager" VerticalAlignment="Stretch"></Label>
                </StackPanel>
                <StackPanel Background="White" Grid.Column="2"></StackPanel>
                <StackPanel Grid.Column="3" VerticalAlignment="Stretch" Name="pnlMoreProducts"  Style="{DynamicResource HeaderControls}">
                    <Label Grid.Column="3" Style="{DynamicResource Header1}" Content="" FontFamily="Segoe UI Symbol" FontSize="14" VerticalAlignment="Bottom" Margin="0,10,0,0"></Label>
                </StackPanel>
                <StackPanel Grid.Column="5" Orientation="Horizontal" x:Name="pnlNew"  Style="{DynamicResource HeaderControls}">
                    <Label Style="{DynamicResource Header1}" Content="" FontFamily="Segoe UI Symbol" FontSize="14" VerticalAlignment="Center"></Label>
                    <Label Style="{DynamicResource Header1}" Content="New" VerticalAlignment="Center" FontSize="16"></Label>
                </StackPanel>
                <StackPanel Grid.Column="6" HorizontalAlignment="Stretch"></StackPanel>
                <StackPanel Grid.Column="7" Orientation="Horizontal" x:Name="pnlSettings" Style="{DynamicResource HeaderControls}"  Margin="0,0,-2,0">
                    <Label Style="{DynamicResource Header1}" Content="" FontFamily="Segoe UI Symbol" FontSize="18" VerticalAlignment="Center"></Label>
                </StackPanel>
                <StackPanel Grid.Column="8" Orientation="Horizontal" HorizontalAlignment="Right" Name="pnlProfile" Style="{DynamicResource HeaderControls}">
                    <Label Style="{DynamicResource Header1}" Content="Batan Bensigar" VerticalAlignment="Center" FontSize="14"></Label>
                    <Border BorderThickness="1,1,4,1" BorderBrush="{DynamicResource ProfileHighlight}" Height="26" Margin="0,0,4,0">
                        <Image Source="{DynamicResource defaultUser}" Height="24" Width="24"></Image>
                    </Border>
                </StackPanel>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="1" Background="{DynamicResource ProfileHighlight}"></StackPanel>
        <StackPanel Grid.Row="2" Background="{DynamicResource WindowBackgroundBrush}" Orientation="Horizontal">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" HorizontalAlignment="Stretch">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                    </Grid>
                    <!--Show the treeview with All Purchases-->
                    <TextBlock Width="223" Grid.Row="0"></TextBlock>
                    <Button Style="{DynamicResource MenuButton}" Content="Purchase History" Grid.Row="1"/>
                    <Button Style="{DynamicResource MenuButton}" Content="Vendors"></Button>
                    <Button Style="{DynamicResource MenuButton}" Content="Items &amp; Prices"></Button>
                    <TextBlock></TextBlock>
                    <!--Split the second part of the panel to show the stock information-->
                </StackPanel>
                <StackPanel Grid.Column="2" Background="WhiteSmoke">
                    
                </StackPanel>
                <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Center" VerticalAlignment="Stretch"></GridSplitter>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="3" Background="{DynamicResource ProfileHighlight}"></StackPanel>
        <StackPanel Grid.Row="4" Background="{DynamicResource HoverAccentBrush}"></StackPanel>
    </Grid>
</Window>
